<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:orientation="vertical"
 tools:context=".MainActivity"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many numbers drawn?"
        android:id="@+id/uvodniTekst" />

<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:id="@+id/rg_lottoType">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/rb_lotto5"
             />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/rb_lotto6"
             />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/rb_lotto7"
            />

</RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of your Lotto"
        android:id="@+id/sizeTekst" />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/numberPicker"
        android:orientation="horizontal" />


<Button
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Continue"
    android:id="@+id/btnContinue"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Test selection"
        android:id="@+id/btnSelection"/>
</LinearLayout>
