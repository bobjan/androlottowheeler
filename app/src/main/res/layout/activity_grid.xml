<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.logotet.androlottowheeler.GridActivity">

    <TextView
        android:text="@string/prompt_select"
        android:id="@+id/tvTitleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="10"
        android:id="@+id/ticketGrid"
        android:stretchMode="columnWidth"
        android:gravity="center"></GridView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/btn_clearall"
        android:textColor="@color/white"
        android:background="@drawable/bluebutton"
        android:id="@+id/btnClear" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/tvCountText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPickedNumbers"
        android:text=" " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/red"

        android:id="@+id/tvWarning"
        android:text="@string/txt_warning" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@drawable/bluebutton"
        android:text="@string/btn_generate"
        android:id="@+id/btnGenerate" />

</LinearLayout>
